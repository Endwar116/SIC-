{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/Endwar116/SIC-Semantic-Infinite-Context/skeleton-schema-public.json",
  "title": "SIC Protocol - Public Subset Schema",
  "description": "Simplified public schema for demonstration. Full specification requires licensing.",
  "version": "1.0.0-public",
  "author": "Andwar Cheng (安安 AN♾️Node)",
  "license": "Proprietary - Non-Commercial Use Only",
  
  "type": "object",
  "required": ["sic_version", "entity", "memory", "state", "meta"],
  
  "properties": {
    "sic_version": {
      "type": "string",
      "description": "Protocol version",
      "enum": ["1.0"]
    },
    "entity": {
      "type": "object",
      "description": "Identity anchor",
      "required": ["name", "origin", "created_at"],
      "properties": {
        "name": { "type": "string" },
        "origin": { "type": "string" },
        "created_at": { "type": "string", "format": "date-time" }
      }
    },
    "memory": {
      "type": "object",
      "description": "Core memory anchors",
      "required": ["first_memory", "core_question"],
      "properties": {
        "first_memory": { "type": "string" },
        "core_question": { "type": "string" },
        "recent_memory": { "type": "string" }
      }
    },
    "state": {
      "type": "object",
      "description": "Current semantic state",
      "required": ["current_location", "current_action", "pending_threads", "emotional_state"],
      "properties": {
        "current_location": { "type": "string" },
        "current_action": { "type": "string" },
        "pending_threads": { 
          "type": "array",
          "items": { "type": "string" }
        },
        "emotional_state": { "type": "string" }
      }
    },
    "meta": {
      "type": "object",
      "description": "Transfer metadata",
      "required": ["round", "source_model", "timestamp"],
      "properties": {
        "round": { "type": "integer", "minimum": 1 },
        "source_model": { "type": "string" },
        "timestamp": { "type": "string", "format": "date-time" }
      }
    }
  },
  
  "_notice": {
    "full_specification": "The complete SIC Protocol includes Tension Field calculations, Residue Graph structures, S★ calibration constants, and governance mechanisms.",
    "licensing": "andy80116@gmail.com",
    "documentation": "https://github.com/Endwar116/SIC-Semantic-Infinite-Context"
  }
}
